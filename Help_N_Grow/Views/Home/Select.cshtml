			</div>
			<div class="form-group">
				<label style="font-style:italic" class="control-label">IFSC Code:</label><label class="control-label">SBIN0024242</label>
			</div><div class="form-group">
				<label style="font-style:italic" class="control-label">UPI Number:</label><label class="control-label">57775@ybl</label>
			</div>

		</div>
	</form>
</div>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
