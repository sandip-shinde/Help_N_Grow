@model Help_N_Grow.Entity.AdminReportsVM
@{
	ViewData["Title"] = "View";
	Layout = "~/Views/Shared/_Super_AdminLayout.cshtml";
}

<h2>Admin View</h2>
<div class="row">
	<div class="col-md-6">


		<table class="table">
			<thead>
				<tr>
					<th>
						Package Name
					</th>			
					<th>
						Amount
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.Bypackage_Report)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.package_Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Amount)
						</td>
					</tr>
				}
			</tbody>
		</table>


	</div>
	<div class="col-md-6">


		<table class="table">
			<thead>
				<tr>
					<th>
						Package Name
					</th>
					<th>
						Level
					</th>
					
					<th>
						Amount
					</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model.BypackageAndLevel_Report)
				{
					<tr>
						<td>
							@Html.DisplayFor(modelItem => item.package_Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Level)
						</td>
						
						<td>
							@Html.DisplayFor(modelItem => item.Amount)
						</td>

					</tr>
				}
			</tbody>
		</table>


	</div>
</div>
<hr />