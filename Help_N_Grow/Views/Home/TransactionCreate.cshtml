@model Help_N_Grow.Entity.Transaction_Upload

@{
	ViewData["Title"] = "Add Transaction ";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
	<div class="col-md-12">
		<br />

	</div>
</div>
<h4>Upload Transaction</h4>
<a asp-action="Transactionindex" asp-controller="Home" class="btn btn-primary">View Transaction</a>
<hr />
<div class="row">
	<div class="col-md-12">


		<form asp-controller="Home" asp-action="TransactionCreate" method="post"
			  enctype="multipart/form-data">
			<div style="color:red">
				@ViewBag.Error
			</div> <br />
			<div class="col-md-5">
				----------------Company-----------------
				<div class="form-group">

					<b style="color:goldenrod">	Transaction 1 Company Amount	@ViewBag.Company_Amount </b><br>
					<label asp-for="Transaction_NoCompany " class="control-label"></label>
					<input name="Transaction_NoCompany" class="control-label" />

				</div>
				<div class="form-group">

					@*<input type="file" name="FileToUpload1" class="form-control" />*@

					<input asp-for="FileToUpload1" type="file" class="form-control" />

				</div>
			</div>
			<div class="col-md-5">
				-----------------Joinee Amount-------------------
				<div class="form-group">
					<b style="color:blueviolet">Transaction 2 Amount	@ViewBag.SelfAmount </b><br>
					<label asp-for="Transaction_NoSelf " class="control-label"></label>
					<input name="Transaction_Noself" class="control-label" />

				</div>
				<div class="form-group">

					@*<input type="file" name="FileToUpload2" class="form-control" />*@

					<input asp-for="FileToUpload2" type="file" class="form-control" />

				</div>
			</div>
			<button type="submit" class="btn btn-primary">Upload Self Transaction Reciept</button>
			<div style="color:red">
				@ViewBag.Error
			</div> <br />
		</form>
	</div>
</div>



@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
