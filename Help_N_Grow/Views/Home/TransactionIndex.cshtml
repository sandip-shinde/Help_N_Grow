				@Html.ActionLink("View", "ViewCompanyPhoto", new { Transactionid = item.Transaction_ID, })
			</td>
			<td>
				@Html.ActionLink("View", "ViewMemberPhoto", new { Transactionid = item.Transaction_ID })
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Transaction_No)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Transaction_NoSelf)
			</td>
