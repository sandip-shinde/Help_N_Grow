			}
			else
			{
				<td style="background-color:red">
					@Html.DisplayFor(modelItem => item.Is_Approved)
				</td>
			}


				<td>
					@Html.DisplayFor(modelItem => item.Parent_Id)/@Html.DisplayFor(modelItem => item.Reg_Id)/@Html.DisplayFor(modelItem => item.Level_Id)
				</td>

				<td>	@Html.DisplayFor(modelItem => item.Note)</td>
		</tr>
		}
